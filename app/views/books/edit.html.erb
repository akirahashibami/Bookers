<h1>Editing Book</h1>
<%= form_for(@book) do |f| %>
	<p class="book_form">Title</h4>
	<div class="field"><%= f.text_field :title %></div>
	<p class="book_form">Body</p>
	<div class="field"><%= f.text_area :body %></div>
	<div class="action"><%= f.submit "Update Book" %></div>
<% end %>

<div class="link_box">
 <%= link_to "Show", book_path(@book.id) %> | <%= link_to "Back", books_path %>
</div>